        <div class="column2 col s12 m6 ">
            <div class="mycard">
                <form action="/login" method="POST">
                    <h4 class="form-heading">Login</h4>
                    <ul class="">
                        <li class="input-field">
                                <label for="email"></label>
                                <input placeholder="Email ID" class="validate" id="email" type="email" name="email" required >
                        </li>
                        <li class="input-field">
                            <label for="pwd"></label>
                            <input id="pwd" placeholder="Password" class="validate" type="password" name="password" required />
                        </li>
                        <p class="message" style="color:red;font-size:13px;text-align:center;">
                            <%= message %>
                        </p>
                       
                        <div>&nbsp;</div>
                        <li>
                            <button type="submit" class="waves-effect waves btn btncolor" value="Submit">
                                Sign In
                            </button>
                        </li>
                    </ul>
                </form>
            </div>

        </div>
</div> <!-- End of the AOS-->


    </div>
    </div>

