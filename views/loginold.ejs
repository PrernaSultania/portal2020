<body>
    <div class="row">
        <img class="chapterlogo" src="/images/IEEECSlogo.png">
    </div>
    <div class="myrow row">


<div data-aos="fade-down"
data-aos-easing="linear"
data-aos-duration="700">



        <div class="column1 col s12 m6">
            <div class="mycard2">
            <img id="eventlogo" src="/images/arcs_logo.png">
