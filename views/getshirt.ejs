        <table class="striped">
            <th>Name</th>
            <th>Email</th>
            <th>T-shirt</th>
            <th>Gender</th>
            <th>University</th>
                <tr ng-repeat="detail in data">
                    <td>{{detail.user.name}}</td>
                    <td>{{detail.user.email}}</td>
                    <td>{{detail.user.tShirtSize}}</td>
                    <td>{{detail.user.gender}}</td>
                    <td>{{detail.user.university}}</td>
                </tr>
        </table>

	<button export-to-csv>Download</button>

</div>
    </div>
    <div>&nbsp;</div>
    <div>&nbsp;</div>
