<script type="text/javascript">  
          
         const app = angular.module("homeApp", []);
  app.controller("myCtrl", function($scope, $http) {

    $scope.initialize = function(data) {
      data = JSON.parse(JSON.stringify(data));
      $scope.data = data;
      console.log($scope.data[0]);
    };

  });
